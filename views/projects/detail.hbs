<div class="min-h-screen bg-white">
    <!-- Hero Banner (Full Width) -->
    {{#if team.banner_image}}
    <div class="w-full h-64 sm:h-80 md:h-96 lg:h-[32rem] overflow-hidden bg-gray-100">
        <img src="/uploads/screenshots/{{team.banner_image}}" alt="{{team.project_name}} banner"
            class="w-full h-full object-cover">
    </div>
    {{/if}}

    <!-- Article Container -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
