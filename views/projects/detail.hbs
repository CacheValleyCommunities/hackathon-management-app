                    {{/if}}
                </header>

                <!-- Article Body -->
                <div class="article-content max-w-3xl">
                    <!-- README Content -->
                    {{#if team.readme_content}}
                    <div class="prose prose-lg max-w-none mb-12">
                        {{{markdown team.readme_content}}}
                    </div>
                    {{/if}}

                    <!-- Screenshots Gallery -->
                    {{#if screenshots.length}}
                    <div class="my-12">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">Project Screenshots</h2>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                            {{#each screenshots}}
                            <div class="relative group cursor-pointer"
                                onclick="openImageModal('/uploads/screenshots/{{this.filename}}')">
                                <div class="aspect-video bg-gray-100 rounded-lg overflow-hidden">
                                    <img src="/uploads/screenshots/{{this.filename}}" alt="{{this.original_filename}}"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                                </div>
                                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition rounded-lg">
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}
                </div>
            </article>

            <!-- Sidebar (Sticky on Desktop) -->
            <aside class="lg:w-80 lg:flex-shrink-0">
                <div class="lg:sticky lg:top-20 space-y-6">
                    <!-- Team Info Card -->
                    <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200">
                        <h3 class="text-lg font-bold text-gray-900 mb-4">About the Team</h3>

                        <div class="space-y-4">
                            {{#if team.team_members.length}}
                            <div>
                                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Team Members
                                </p>
                                <ul class="space-y-2">
                                    {{#each team.team_members}}
                                    <li class="flex items-center gap-2 text-sm text-gray-700">
                                        <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none"
                                            stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                            </path>
                                        </svg>
                                        <span>{{this}}</span>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            {{/if}}

                            {{#if canViewContactEmail}}
                            {{#if team.contact_email}}
                            <div>
                                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Contact</p>
                                <a href="mailto:{{team.contact_email}}"
                                    class="text-sm text-blue-600 hover:text-blue-700 hover:underline break-all">
                                    {{team.contact_email}}
                                </a>
                            </div>
                            {{/if}}
                            {{/if}}

                            {{#if team.table_name}}
                            <div>
                                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Location</p>
                                <p class="text-sm text-gray-700">{{team.table_name}}</p>
                            </div>
                            {{/if}}

                            {{#if team.division}}
                            <div>
                                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Division</p>
                                <span
                                    class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full">
                                    {{team.division}}
                                </span>
                            </div>
                            {{/if}}
                        </div>
                    </div>

                    <!-- Quick Links -->
                    {{#if (or team.website_link team.github_link)}}
                    <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200">
                        <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Links</h3>
                        <div class="space-y-3">
                            {{#if team.website_link}}
                            <a href="{{team.website_link}}" target="_blank" rel="noopener noreferrer"
                                class="flex items-center gap-3 p-3 bg-white hover:bg-gray-50 rounded-lg transition border border-gray-200 group">
