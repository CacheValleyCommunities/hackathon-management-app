<div class="min-h-screen bg-white flex items-center justify-center px-4 py-12">
    <div class="max-w-2xl w-full">
        <!-- Header -->
        <div class="text-center mb-12">
            {{#if eventSettings.logo_filename}}
            <img src="/uploads/{{eventSettings.logo_filename}}" alt="{{eventSettings.event_name}}"
                class="max-h-20 mx-auto mb-6">
            {{/if}}
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight mb-2">Team Registration</h1>
            <a href="/auth/login" class="text-sm text-gray-600 hover:text-gray-900 transition">
                ← Back to Sign In
            </a>
        </div>

        <!-- Registration Card -->
        <div class="border border-gray-200 rounded-lg p-8">
            {{#if error}}
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-800 font-medium">{{error}}</p>
                    </div>
                </div>
            </div>
            {{/if}}

            <form method="POST" action="/register" class="space-y-6">
                <!-- Team Name -->
                <div>
                    <label for="teamName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Team Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="teamName" name="teamName" required autofocus placeholder="e.g., Team Awesome"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Table Name & Division (Side by Side) -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Table Name -->
                    <div>
                        <label for="tableName" class="block text-sm font-semibold text-gray-700 mb-2">
                            Table Location <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <input type="text" id="tableSearch" placeholder="Type to search tables..."
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"
                                onkeyup="filterTables()" onfocus="showTableDropdown()" autocomplete="off">
                            <input type="hidden" id="tableName" name="tableName" required>
                            <div id="tableDropdown"
                                class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto">
                                {{#each tables}}
                                <div class="table-option px-4 py-2 cursor-pointer hover:bg-gray-50"
                                    data-table="{{this}}" onclick="selectTable('{{this}}')">
                                    {{this}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        <p class="text-xs text-gray-500 mt-2">
                            Chess board style (A1-P10)
                        </p>
                    </div>

                    <!-- Division -->
                    {{#if divisions.length}}
                    <div>
                        <label for="division" class="block text-sm font-semibold text-gray-700 mb-2">
                            Division
                        </label>
                        <select id="division" name="division"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                            <option value="">Select (Optional)</option>
                            {{#each divisions}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/if}}
                </div>

                <!-- Project Name -->
                <div>
                    <label for="projectName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Project Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="projectName" name="projectName" required
                        placeholder="e.g., AI-Powered Solution"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Contact Email & Website (Side by Side) -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Contact Email -->
                    <div>
                        <label for="contactEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                            Contact Email <span id="contactEmailRequired" class="text-red-500">*</span>
                        </label>
                        <input type="email" id="contactEmail" name="contactEmail" required
                            placeholder="team@example.com"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                        <p id="contactEmailNote" class="text-xs text-gray-500 mt-2 hidden">Optional for participants
                            under 18 and only with consent of guardian</p>
                    </div>

                    <!-- Website Link -->
                    <div>
                        <label for="websiteLink" class="block text-sm font-semibold text-gray-700 mb-2">
                            Website / Demo Link
                        </label>
                        <input type="url" id="websiteLink" name="websiteLink" placeholder="https://your-project.com"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                    </div>
                </div>

                <!-- GitHub Link -->
                <div>
                    <label for="githubLink" class="block text-sm font-semibold text-gray-700 mb-2">
                        GitHub Repository
                    </label>
                    <input type="url" id="githubLink" name="githubLink" placeholder="https://github.com/..."
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Team Members -->
                <div>
                    <label for="teamMembers" class="block text-sm font-semibold text-gray-700 mb-2">
                        Team Members
                    </label>
                    <textarea id="teamMembers" name="teamMembers" rows="3"
                        placeholder="Enter team member names, one per line or comma-separated"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition"></textarea>
                    <p class="text-xs text-gray-500 mt-2">You can add or edit team members later from your dashboard</p>
                </div>

                <!-- Age and Guardian Information -->
                <div class="border-t border-gray-200 pt-6">
                    <div class="mb-4">
                        <label class="flex items-start gap-3 cursor-pointer">
                            <input type="checkbox" id="isUnder18" name="isUnder18" value="1"
                                class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                                onchange="toggleGuardianEmail()">
                            <div>
                                <span class="text-sm font-semibold text-gray-700">I am under 18 years of age</span>
                                <p class="text-xs text-gray-500 mt-1">Guardian email is required for participants under
                                    18</p>
                            </div>
                        </label>
                    </div>
                    <div id="guardianEmailSection" class="hidden">
                        <label for="guardianEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                            Guardian Email <span class="text-red-500">*</span>
                        </label>
                        <input type="email" id="guardianEmail" name="guardianEmail" placeholder="guardian@example.com"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                        <div class="mt-3 bg-amber-50 border-l-4 border-amber-400 p-4 rounded">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd"
                                            d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                                            clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-amber-800 font-semibold">Guardian Must Complete Setup</p>
                                    <p class="text-xs text-amber-700 mt-1">
                                        The guardian will receive an email and must log in to complete the team setup.
                                        <strong>The guardian is the sole legal entity responsible</strong> for all
                                        information entered into the platform.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Policy Acceptance -->
                <div class="border-t border-gray-200 pt-6 space-y-4">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4">Required Agreements</h3>

                    <div class="space-y-3">
                        <label class="flex items-start gap-3 cursor-pointer">
                            <input type="checkbox" id="privacyPolicyAccepted" name="privacyPolicyAccepted" value="1"
                                required class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <div>
                                <span class="text-sm font-semibold text-gray-700">
                                    I accept the <a href="/policies/privacy" target="_blank"
                                        class="text-blue-600 hover:text-blue-800 underline">Privacy Policy</a>
                                    <span class="text-red-500">*</span>
                                </span>
                            </div>
                        </label>

                        <label class="flex items-start gap-3 cursor-pointer">
                            <input type="checkbox" id="termsAccepted" name="termsAccepted" value="1" required
                                class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <div>
                                <span class="text-sm font-semibold text-gray-700">
                                    I accept the <a href="/policies/terms" target="_blank"
                                        class="text-blue-600 hover:text-blue-800 underline">Terms of Use</a>
                                    <span class="text-red-500">*</span>
                                </span>
                            </div>
                        </label>

                        <label class="flex items-start gap-3 cursor-pointer">
                            <input type="checkbox" id="acceptableUseAccepted" name="acceptableUseAccepted" value="1"
                                required class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                            <div>
                                <span class="text-sm font-semibold text-gray-700">
                                    I accept the <a href="/policies/acceptable-use" target="_blank"
                                        class="text-blue-600 hover:text-blue-800 underline">Acceptable Use Policy</a>
                                    <span class="text-red-500">*</span>
                                </span>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Email Preferences -->
                <div class="border-t border-gray-200 pt-6">
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" id="emailPreferences" name="emailPreferences" value="1"
                            class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                        <div>
                            <span class="text-sm font-semibold text-gray-700">Email Preferences</span>
                            <p class="text-xs text-gray-500 mt-1">I would like to receive emails about future code-camp
                                events and other code-related content</p>
                        </div>
                    </label>
                </div>

                <!-- Data Privacy Notice -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <p class="text-xs text-gray-700">
                        <strong>Data Privacy:</strong> We do not sell your personal data or share it with third parties.
                        Your information is used solely for event management and communication purposes.
                        See our <a href="/policies/privacy" target="_blank"
                            class="text-blue-600 hover:text-blue-800 underline">Privacy Policy</a> for more details.
                    </p>
                </div>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full px-6 py-4 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                    Register Team
                </button>
            </form>

            <!-- Footer Info -->
            <div class="mt-6 pt-6 border-t border-gray-200">
                <p class="text-center text-sm text-gray-500">
                    <span class="text-red-500">*</span> Required fields
                </p>
            </div>
        </div>

        <!-- Success Message with Guardian Notice -->
        {{#if success}}
        <div class="mt-6 bg-green-50 border-l-4 border-green-400 p-4 rounded">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-green-800 font-medium">{{success}}</p>
                    {{#if isUnder18}}
                    <div class="mt-3 bg-amber-50 border border-amber-200 rounded p-3">
                        <p class="text-xs text-amber-800 font-semibold mb-1">⚠️ Important: Guardian Action Required</p>
                        <p class="text-xs text-amber-700">
                            The guardian email ({{guardianEmail}}) has been notified and must log in to complete the
                            team setup.
                            <strong>The guardian is the sole legal entity responsible</strong> for verifying and
                            approving all information entered into the platform.
                        </p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/if}}

        <!-- Additional Info -->
        <div class="mt-8 text-center">
            <p class="text-sm text-gray-600">
                Already registered?
                <a href="/auth/login" class="text-gray-900 font-semibold hover:underline">Sign in here</a>
            </p>
        </div>
    </div>
</div>

<script>
    function selectTable(tableName) {
        document.getElementById('tableSearch').value = tableName;
        document.getElementById('tableName').value = tableName;
        document.getElementById('tableDropdown').classList.add('hidden');
    }

    function showTableDropdown() {
        document.getElementById('tableDropdown').classList.remove('hidden');
    }

    function filterTables() {
        const input = document.getElementById('tableSearch');
        const filter = input.value.toUpperCase();
        const dropdown = document.getElementById('tableDropdown');
        const options = dropdown.getElementsByClassName('table-option');

        let hasVisibleOptions = false;
        for (let i = 0; i < options.length; i++) {
            const txtValue = options[i].textContent || options[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                options[i].style.display = "";
                hasVisibleOptions = true;
            } else {
                options[i].style.display = "none";
            }
        }

        if (hasVisibleOptions) {
            dropdown.classList.remove('hidden');
        } else {
            dropdown.classList.add('hidden');
        }
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function (event) {
        const dropdown = document.getElementById('tableDropdown');
        const searchInput = document.getElementById('tableSearch');
        if (!dropdown.contains(event.target) && event.target !== searchInput) {
            dropdown.classList.add('hidden');
        }
    });

    // Toggle guardian email field based on age
    function toggleGuardianEmail() {
        const isUnder18 = document.getElementById('isUnder18').checked;
        const guardianSection = document.getElementById('guardianEmailSection');
        const guardianEmail = document.getElementById('guardianEmail');
        const contactEmail = document.getElementById('contactEmail');
        const contactEmailRequired = document.getElementById('contactEmailRequired');
        const contactEmailNote = document.getElementById('contactEmailNote');

        if (isUnder18) {
            guardianSection.classList.remove('hidden');
            guardianEmail.setAttribute('required', 'required');
            // Make contact email optional for under 18
            contactEmail.removeAttribute('required');
            contactEmailRequired.classList.add('hidden');
            contactEmailNote.classList.remove('hidden');
        } else {
            guardianSection.classList.add('hidden');
            guardianEmail.removeAttribute('required');
            guardianEmail.value = '';
            // Make contact email required for 18+
            contactEmail.setAttribute('required', 'required');
            contactEmailRequired.classList.remove('hidden');
            contactEmailNote.classList.add('hidden');
        }
    }

    // Validate form before submission
    document.querySelector('form').addEventListener('submit', function (e) {
        const isUnder18 = document.getElementById('isUnder18').checked;
        const guardianEmail = document.getElementById('guardianEmail').value;
        const contactEmail = document.getElementById('contactEmail').value;

        // For under 18, guardian email is required
        if (isUnder18 && !guardianEmail) {
            e.preventDefault();
            alert('Guardian email is required for participants under 18 years of age.');
            document.getElementById('guardianEmailSection').classList.remove('hidden');
            document.getElementById('guardianEmail').focus();
            return false;
        }

        // For 18+, contact email is required
        if (!isUnder18 && !contactEmail) {
            e.preventDefault();
            alert('Contact email is required for participants 18 years of age or older.');
            document.getElementById('contactEmail').focus();
            return false;
        }
    });
</script>