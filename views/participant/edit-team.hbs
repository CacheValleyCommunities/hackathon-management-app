<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Edit Team Information</h1>
                    <p class="text-sm text-gray-500 mt-2">Update your team's project details</p>
                </div>
                <a href="{{#if isAdmin}}/admin/teams/{{team.id}}/edit{{else}}/participant{{/if}}" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition">
                    ← Back
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Error Messages -->
        {{#if error}}
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
            <p class="text-red-800 font-medium">✗ {{error}}</p>
        </div>
        {{/if}}

        <form method="POST" action="/participant/team/update" enctype="multipart/form-data" class="space-y-12" id="teamForm">
            {{#if isAdmin}}
            <input type="hidden" name="teamId" value="{{team.id}}">
            {{/if}}

            <!-- Basic Information -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">Basic Information</h2>
                <div class="space-y-6">
                    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
                        <p class="text-blue-800 text-sm">
                            Update your team's project information. Team name and table location cannot be changed.
                        </p>
                    </div>

                    <!-- Team Name (Disabled) -->
                    <div>
                        <label for="team-name-display" class="block text-sm font-semibold text-gray-700 mb-2">
                            Team Name
                        </label>
                        <input type="text" 
                               id="team-name-display" 
                               value="{{team.name}}" 
                               disabled
                               class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-600 cursor-not-allowed">
                    </div>

                    <!-- Table (Disabled) -->
                    <div>
                        <label for="table-display" class="block text-sm font-semibold text-gray-700 mb-2">
                            Table Location
                        </label>
                        <input type="text" 
                               id="table-display" 
                               value="{{team.table_name}}" 
                               disabled
                               class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-600 cursor-not-allowed">
                    </div>

                    <!-- Project Name -->
                    <div>
                        <label for="projectName" class="block text-sm font-semibold text-gray-700 mb-2">
                            Project Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="projectName" 
                               name="projectName" 
                               value="{{team.project_name}}"
                               required 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                    </div>

                    <!-- Contact Email -->
                    <div>
                        <label for="contactEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                            Contact Email
                        </label>
                        <input type="email" 
                               id="contactEmail" 
                               name="contactEmail" 
                               value="{{team.contact_email}}"
                               placeholder="team@example.com"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                    </div>
                </div>
            </div>

            <!-- Team Members -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">Team Members</h2>
                <div>
                    <p class="text-sm text-gray-600 mb-4">Add team member names (one per line or comma-separated)</p>
                    <div id="teamMembersContainer" class="space-y-3">
                        {{#if team.team_members}}
                            {{#each team.team_members}}
                            <div class="team-member-item flex items-center gap-2">
                                <input type="text" 
                                       name="teamMembers[]" 
                                       value="{{this}}"
                                       placeholder="Member name"
                                       class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                                <button type="button" 
                                        onclick="removeMember(this)"
                                        class="px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 rounded-lg transition font-medium">
                                    Remove
                                </button>
                            </div>
                            {{/each}}
                        {{/if}}
                    </div>
                    <button type="button" 
                            onclick="addMember()"
                            class="mt-3 px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 rounded-lg transition font-medium">
                        + Add Member
                    </button>
                </div>
            </div>

            <!-- Project Links -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">Project Links</h2>
                <div class="space-y-6">
                    <!-- Website Link -->
                    <div>
                        <label for="websiteLink" class="block text-sm font-semibold text-gray-700 mb-2">
                            Website / Demo Link
                        </label>
                        <input type="url" 
                               id="websiteLink" 
                               name="websiteLink" 
                               value="{{team.website_link}}"
                               placeholder="https://your-project.com"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                        <p class="text-xs text-gray-500 mt-1">Link to your live project or demo</p>
                    </div>

                    <!-- GitHub Link -->
                    <div>
                        <label for="githubLink" class="block text-sm font-semibold text-gray-700 mb-2">
                            GitHub Repository
                        </label>
                        <input type="url" 
                               id="githubLink" 
                               name="githubLink" 
                               value="{{team.github_link}}"
                               placeholder="https://github.com/username/repo"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                    </div>
                </div>
            </div>

            <!-- README -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">Project README</h2>
                <div>
                    <label for="readmeContent" class="block text-sm font-semibold text-gray-700 mb-2">
                        Project Description / README
                    </label>
                    <textarea id="readmeContent" 
                              name="readmeContent" 
                              rows="12"
                              placeholder="Describe your project, features, technologies used, etc. Markdown is supported."
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition font-mono text-sm">{{team.readme_content}}</textarea>
                    <p class="text-xs text-gray-500 mt-1">Markdown formatting is supported. This will be displayed on your public project page.</p>
                </div>
            </div>

            <!-- Banner & Logo Images -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">Banner & Logo Images</h2>
                <div class="space-y-8">
                    <!-- Banner Image -->
                    <div>
                        <label for="banner_image" class="block text-sm font-semibold text-gray-700 mb-2">
                            Banner Image
                        </label>
                        <p class="text-xs text-gray-500 mb-3">Upload a banner image for your project page (max 5MB)</p>
                        
                        {{#if team.banner_image}}
                        <div class="mb-4">
                            <p class="text-sm font-semibold text-gray-700 mb-2">Current Banner Image:</p>
                            <div class="relative inline-block group">
                                <img src="/uploads/screenshots/{{team.banner_image}}" 
                                     alt="Banner image"
                                     class="max-w-full h-32 object-cover rounded-lg border border-gray-200">
                                <button type="button"
                                        onclick="deleteBannerImage()"
                                        class="absolute top-2 right-2 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 rounded-full p-1.5 opacity-0 group-hover:opacity-100 transition shadow-sm">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            <input type="hidden" name="delete_banner_image" id="delete_banner_image" value="0">
                        </div>
                        {{/if}}
                        
                        <input type="file" 
                               id="banner_image" 
                               name="banner_image" 
                               accept="image/jpeg,image/png,image/gif,image/webp"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                        <p class="text-xs text-gray-500 mt-1">Recommended size: 1200x300px or similar wide aspect ratio</p>
                    </div>

                    <!-- Logo Image -->
                    <div>
                        <label for="logo_image" class="block text-sm font-semibold text-gray-700 mb-2">
                            Logo Image
                        </label>
                        <p class="text-xs text-gray-500 mb-3">Upload a logo for your team (max 5MB)</p>
                        
                        {{#if team.logo_image}}
                        <div class="mb-4">
                            <p class="text-sm font-semibold text-gray-700 mb-2">Current Logo Image:</p>
                            <div class="relative inline-block group">
                                <img src="/uploads/screenshots/{{team.logo_image}}" 
                                     alt="Logo image"
                                     class="max-w-full h-24 object-contain rounded-lg border border-gray-200">
                                <button type="button"
                                        onclick="deleteLogoImage()"
                                        class="absolute top-2 right-2 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 rounded-full p-1.5 opacity-0 group-hover:opacity-100 transition shadow-sm">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            <input type="hidden" name="delete_logo_image" id="delete_logo_image" value="0">
                        </div>
                        {{/if}}
                        
                        <input type="file" 
                               id="logo_image" 
                               name="logo_image" 
                               accept="image/jpeg,image/png,image/gif,image/webp"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                        <p class="text-xs text-gray-500 mt-1">Recommended size: 200x200px or similar square aspect ratio</p>
                    </div>
                </div>
            </div>

            <!-- Screenshots -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">Project Screenshots</h2>
                <div>
                    <p class="text-sm text-gray-600 mb-4">Upload up to 10 screenshots (max 2MB each)</p>
                    
                    <!-- Current Screenshots -->
                    {{#if screenshots}}
                    <div class="mb-6">
                        <h3 class="text-sm font-semibold text-gray-700 mb-3">Current Screenshots ({{screenshots.length}}/10)</h3>
                        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
                            {{#each screenshots}}
                            <div class="relative group">
                                <img src="/uploads/screenshots/{{this.filename}}" 
                                     alt="{{this.original_filename}}"
                                     class="w-full h-32 object-cover rounded-lg border border-gray-200">
                                <button type="button"
                                        onclick="deleteScreenshot({{this.id}})"
                                        class="absolute top-2 right-2 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 rounded-full p-1.5 opacity-0 group-hover:opacity-100 transition shadow-sm">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}

                    <!-- Upload New Screenshots -->
                    <div>
                        <label for="screenshots" class="block text-sm font-semibold text-gray-700 mb-2">
                            Upload Screenshots
                        </label>
                        <input type="file" 
                               id="screenshots" 
                               name="screenshots" 
                               accept="image/jpeg,image/png,image/gif,image/webp"
                               multiple
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
                        <p class="text-xs text-gray-500 mt-1">You can upload up to {{#if screenshots}}{{subtract 10 screenshots.length}}{{else}}10{{/if}} more screenshots</p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
                <button type="submit" 
                        class="flex-1 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                    Update Information
                </button>
                <a href="{{#if isAdmin}}/admin/teams/{{team.id}}/edit{{else}}/participant{{/if}}" 
                   class="flex-1 px-6 py-3 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 text-center rounded-lg font-semibold transition flex items-center justify-center">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<script>
let memberCount = {{#if team.team_members}}{{team.team_members.length}}{{else}}0{{/if}};

function addMember() {
    const container = document.getElementById('teamMembersContainer');
    const div = document.createElement('div');
    div.className = 'team-member-item flex items-center gap-2';
    div.innerHTML = `
        <input type="text" 
               name="teamMembers[]" 
               placeholder="Member name"
               class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition">
        <button type="button" 
                onclick="removeMember(this)"
                class="px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 border border-gray-300 rounded-lg transition font-medium">
            Remove
        </button>
    `;
    container.appendChild(div);
    memberCount++;
}

function removeMember(button) {
    button.parentElement.remove();
    memberCount--;
}

async function deleteScreenshot(screenshotId) {
    if (!confirm('Are you sure you want to delete this screenshot?')) {
        return;
    }

    try {
        const teamIdInput = document.querySelector('input[name="teamId"]');
        const body = teamIdInput ? { teamId: parseInt(teamIdInput.value) } : {};

        const response = await fetch(`/participant/team/screenshot/${screenshotId}/delete`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(body)
        });

        if (response.ok) {
            location.reload();
        } else {
            alert('Failed to delete screenshot');
        }
    } catch (error) {
        console.error('Error deleting screenshot:', error);
        alert('Failed to delete screenshot');
    }
}

async function deleteBannerImage() {
    if (!confirm('Are you sure you want to delete the banner image?')) {
        return;
    }

    try {
        const teamIdInput = document.querySelector('input[name="teamId"]');
        const body = teamIdInput ? { teamId: parseInt(teamIdInput.value) } : {};

        const response = await fetch('/participant/team/banner/delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(body)
        });

        if (response.ok) {
            location.reload();
        } else {
            alert('Failed to delete banner image');
        }
    } catch (error) {
        console.error('Error deleting banner image:', error);
        alert('Failed to delete banner image');
    }
}

async function deleteLogoImage() {
    if (!confirm('Are you sure you want to delete the logo image?')) {
        return;
    }

    try {
        const teamIdInput = document.querySelector('input[name="teamId"]');
        const body = teamIdInput ? { teamId: parseInt(teamIdInput.value) } : {};

        const response = await fetch('/participant/team/logo/delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(body)
        });

        if (response.ok) {
            location.reload();
        } else {
            alert('Failed to delete logo image');
        }
    } catch (error) {
        console.error('Error deleting logo image:', error);
        alert('Failed to delete logo image');
    }
}

// Validate file sizes before submit
document.getElementById('teamForm').addEventListener('submit', function(e) {
    const maxScreenshotSize = 2 * 1024 * 1024; // 2MB
    const maxBannerLogoSize = 5 * 1024 * 1024; // 5MB
    
    // Validate screenshots
    const screenshotInput = document.getElementById('screenshots');
    if (screenshotInput.files.length > 0) {
        for (let file of screenshotInput.files) {
            if (file.size > maxScreenshotSize) {
                e.preventDefault();
                alert(`Screenshot "${file.name}" is too large. Maximum size is 2MB.`);
                return false;
            }
        }
    }
    
    // Validate banner image
    const bannerInput = document.getElementById('banner_image');
    if (bannerInput.files.length > 0) {
        if (bannerInput.files[0].size > maxBannerLogoSize) {
            e.preventDefault();
            alert(`Banner image "${bannerInput.files[0].name}" is too large. Maximum size is 5MB.`);
            return false;
        }
    }
    
    // Validate logo image
    const logoInput = document.getElementById('logo_image');
    if (logoInput.files.length > 0) {
        if (logoInput.files[0].size > maxBannerLogoSize) {
            e.preventDefault();
            alert(`Logo image "${logoInput.files[0].name}" is too large. Maximum size is 5MB.`);
            return false;
        }
    }
});
</script>
