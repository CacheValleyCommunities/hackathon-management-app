<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">My Team Dashboard</h1>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Success Message -->
        {{#if (eq (lookup query 'success') 'team_updated')}}
        <div class="mb-8 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">âœ“ Team information updated successfully!</p>
        </div>
        {{/if}}

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <!-- Team Name Card -->
            <div class="border border-gray-200 rounded-lg p-6">
                <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Team Name</h3>
                <p class="text-2xl font-bold text-gray-900">{{team.name}}</p>
            </div>

            <!-- Table Card -->
            <div class="border border-gray-200 rounded-lg p-6">
                <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Table Location</h3>
                <p class="text-2xl font-bold text-gray-900">{{team.table_name}}</p>
            </div>

            <!-- Rank Card -->
            {{#if teamRank}}
            <div class="border border-gray-200 rounded-lg p-6">
                <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Current Rank</h3>
                <p class="text-2xl font-bold text-gray-900">
                    {{#if (eq teamRank 1)}}ðŸ¥‡ 1st{{else if (eq teamRank 2)}}ðŸ¥ˆ 2nd{{else if (eq teamRank 3)}}ðŸ¥‰
                    3rd{{else}}#{{teamRank}}{{/if}}
                </p>
            </div>
            {{/if}}
        </div>

        <!-- Team Information -->
        <div class="mb-12 pb-8 border-b border-gray-200">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Team Information</h2>
                <a href="/participant/team/edit"
                    class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 border border-gray-300 rounded-lg transition">
                    Edit
                </a>
            </div>
            <div class="space-y-6">
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Project Name</p>
                    <p class="text-lg text-gray-900">{{team.project_name}}</p>
                </div>
                {{#if team.contact_email}}
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Contact Email</p>
                    <p class="text-lg text-gray-900">{{team.contact_email}}</p>
                </div>
                {{/if}}
                {{#if team.github_link}}
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">GitHub Repository</p>
                    <a href="{{team.github_link}}" target="_blank" class="text-lg text-gray-900 hover:underline">
                        {{team.github_link}}
                    </a>
                </div>
                {{/if}}
            </div>
        </div>

        <!-- Quick Actions -->
        <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Quick Actions</h2>
            <a href="/scores/results?round={{currentRound}}"
                class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Leaderboard</h3>
                <p class="text-sm text-gray-600">View full leaderboard</p>
            </a>
        </div>
    </div>
</div>