<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Event Settings</h1>
                    <p class="text-sm text-gray-500 mt-2">Configure event details and branding</p>
                </div>
                <a href="/admin" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition">
                    ← Back
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Error Messages -->
        {{#if error}}
        <div class="mb-8 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800 font-medium">{{error}}</p>
        </div>
        {{/if}}
        
        <!-- Success Messages -->
        {{#if success}}
        <div class="mb-8 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ {{success}}</p>
        </div>
        {{/if}}

        <!-- Settings Form -->
        <div class="border border-gray-200 rounded-lg p-8">
            <form method="POST" action="/admin/settings" enctype="multipart/form-data" class="space-y-8">
                <!-- Event Name -->
                <div>
                    <label for="eventName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Event Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="eventName" 
                           name="eventName" 
                           value="{{settings.event_name}}"
                           required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Start and End Dates -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="startDate" class="block text-sm font-semibold text-gray-700 mb-2">
                            Start Date
                        </label>
                        <input type="date" 
                               id="startDate" 
                               name="startDate" 
                               value="{{settings.start_date}}"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                    </div>
                    
                    <div>
                        <label for="endDate" class="block text-sm font-semibold text-gray-700 mb-2">
                            End Date
                        </label>
                        <input type="date" 
                               id="endDate" 
                               name="endDate" 
                               value="{{settings.end_date}}"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                    </div>
                </div>

                <!-- Divisions -->
                <div>
                    <label for="divisions" class="block text-sm font-semibold text-gray-700 mb-2">
                        Divisions
                    </label>
                    <p class="text-sm text-gray-600 mb-3">
                        Enter divisions separated by commas (e.g., "Beginner, Intermediate, Advanced")
                    </p>
                    <input type="text" 
                           id="divisions" 
                           name="divisions" 
                           value="{{#if settings.divisions}}{{#each settings.divisions}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}{{/if}}"
                           placeholder="Beginner, Intermediate, Advanced"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Logo Upload -->
                <div>
                    <label for="logo" class="block text-sm font-semibold text-gray-700 mb-2">
                        Event Logo
                    </label>
                    {{#if settings.logo_filename}}
                    <div class="mb-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                        <p class="text-sm text-gray-600 mb-3">Current logo:</p>
                        <img src="/uploads/{{settings.logo_filename}}" 
                             alt="Event Logo" 
                             class="max-w-[200px] max-h-[100px] border border-gray-300 rounded-lg p-2 bg-white">
                    </div>
                    {{/if}}
                    <input type="file" 
                           id="logo" 
                           name="logo" 
                           accept="image/*"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent bg-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200">
                    <p class="text-xs text-gray-500 mt-2">
                        Accepted formats: JPG, PNG, GIF, SVG, WebP (max 5MB)
                    </p>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4">
                    <button type="submit" 
                            class="flex-1 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                        Save Settings
                    </button>
                    <a href="/admin" 
                       class="flex-1 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-800 text-center rounded-lg font-semibold transition">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
