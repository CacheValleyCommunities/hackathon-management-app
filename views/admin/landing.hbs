<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Landing Page Settings</h1>
            <p class="text-gray-600">Customize the public landing page for your event</p>
        </div>

        <!-- Error Message -->
        {{#if error}}
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
            <p class="text-red-800 font-medium">{{error}}</p>
        </div>
        {{/if}}

        <!-- Success Message -->
        {{#if success}}
        <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded">
            <p class="text-green-800 font-medium">âœ“ {{success}}</p>
        </div>
        {{/if}}

        <!-- Settings Form -->
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-8">
            <form method="POST" action="/admin/landing" enctype="multipart/form-data" class="space-y-8">
                <!-- Hero Banner Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Hero Banner</h2>
                    
                    <!-- Current Hero Banner -->
                    {{#if settings.hero_banner_image}}
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Current Hero Banner</label>
                        <div class="relative inline-block">
                            <img src="/uploads/{{settings.hero_banner_image}}" 
                                 alt="Hero Banner" 
                                 class="max-w-full h-auto max-h-64 rounded-lg border border-gray-300">
                        </div>
                    </div>
                    {{/if}}

                    <!-- Upload New Hero Banner -->
                    <div class="mb-6">
                        <label for="heroBanner" class="block text-sm font-semibold text-gray-700 mb-2">
                            {{#if settings.hero_banner_image}}Replace Hero Banner Image{{else}}Upload Hero Banner Image{{/if}}
                        </label>
                        <input type="file" 
                               id="heroBanner" 
                               name="heroBanner" 
                               accept="image/*"
                               class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                        <p class="text-xs text-gray-500 mt-2">Recommended size: 1920x600px or similar wide format. Max file size: 5MB</p>
                    </div>

                    <!-- Hero Banner Link -->
                    <div>
                        <label for="heroBannerLink" class="block text-sm font-semibold text-gray-700 mb-2">
                            Hero Banner Link (Optional)
                        </label>
                        <input type="url" 
                               id="heroBannerLink" 
                               name="heroBannerLink" 
                               value="{{settings.hero_banner_link}}"
                               placeholder="https://example.com"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                        <p class="text-xs text-gray-500 mt-2">If provided, the hero banner image will be clickable and link to this URL</p>
                    </div>
                </div>

                <!-- Event Dates Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Event Dates</h2>
                    <div>
                        <label for="eventDatesText" class="block text-sm font-semibold text-gray-700 mb-2">
                            Event Dates Display Text
                        </label>
                        <input type="text" 
                               id="eventDatesText" 
                               name="eventDatesText" 
                               value="{{settings.event_dates_text}}"
                               placeholder="e.g., March 15-17, 2024 or Coming Soon!"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                        <p class="text-xs text-gray-500 mt-2">Custom text to display for event dates. If left empty, will use start/end dates from Event Settings.</p>
                    </div>
                </div>

                <!-- Landing Page Content Section -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Landing Page Content</h2>
                    <div>
                        <label for="landingPageContent" class="block text-sm font-semibold text-gray-700 mb-2">
                            Content
                        </label>
                        <textarea id="landingPageContent" 
                                  name="landingPageContent" 
                                  rows="12"
                                  placeholder="Enter the main content for your landing page. This will appear below the hero banner. You can use line breaks for paragraphs."
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition font-sans">{{settings.landing_page_content}}</textarea>
                        <p class="text-xs text-gray-500 mt-2">Main content displayed on the landing page. Line breaks will be preserved.</p>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="flex items-center justify-end gap-4 pt-6 border-t border-gray-200">
                    <a href="/admin" 
                       class="px-6 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition">
                        Cancel
                    </a>
                    <button type="submit"
                            class="px-6 py-2 text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 rounded-lg transition">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>

        <!-- Preview Section -->
        <div class="mt-8 bg-white border border-gray-200 rounded-lg shadow-sm p-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Preview</h2>
            <p class="text-sm text-gray-600 mb-4">This is how your landing page will appear to visitors:</p>
            <div class="border border-gray-300 rounded-lg overflow-hidden">
                <iframe src="/" 
                        class="w-full h-[600px] border-0"
                        title="Landing Page Preview"></iframe>
            </div>
            <p class="text-xs text-gray-500 mt-2">Note: Preview may not reflect all changes until saved</p>
        </div>
    </div>
</div>

