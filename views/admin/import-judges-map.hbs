<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Map CSV Fields</h1>
                    <p class="text-sm text-gray-500 mt-2">Select which CSV columns correspond to each required field • Found {{totalRows}} rows</p>
                </div>
                <a href="/admin/judges/import"
                    class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition">
                    ← Back
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Field Mapping Form -->
        <form method="POST" action="/admin/judges/import/process" class="space-y-8">
            <input type="hidden" name="csvData" value="{{csvData}}">
            
            <!-- Mapping Section -->
            <div class="border border-gray-200 rounded-lg p-8">
                <h2 class="text-xl font-bold text-gray-900 mb-6">Field Mapping</h2>
                <div class="space-y-6">
                    <!-- Email Field (Required) -->
                    <div>
                        <label for="emailField" class="block text-sm font-semibold text-gray-700 mb-2">
                            Email Address <span class="text-red-500">*</span>
                        </label>
                        <select id="emailField" name="emailField" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                            <option value="">-- Select CSV Column --</option>
                            {{#each headers}}
                            <option value="{{this}}" {{#if (eq this ../emailField)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Name Field (Required) -->
                    <div>
                        <label for="nameField" class="block text-sm font-semibold text-gray-700 mb-2">
                            Full Name <span class="text-red-500">*</span>
                        </label>
                        <select id="nameField" name="nameField" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                            <option value="">-- Select CSV Column --</option>
                            {{#each headers}}
                            <option value="{{this}}" {{#if (eq this ../nameField)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Role Field (Optional) -->
                    <div>
                        <label for="roleField" class="block text-sm font-semibold text-gray-700 mb-2">
                            Role (Optional)
                        </label>
                        <select id="roleField" name="roleField"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                            <option value="">-- Select CSV Column (or leave blank) --</option>
                            {{#each headers}}
                            <option value="{{this}}" {{#if (eq this ../roleField)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                        <p class="text-xs text-gray-500 mt-2">If not mapped, all users will be created as "judge"</p>
                    </div>
                </div>
            </div>

            <!-- Data Preview -->
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-900">Data Preview (First 10 Rows)</h2>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                {{#each headers}}
                                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">{{this}}</th>
                                {{/each}}
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {{#each preview}}
                            <tr class="hover:bg-gray-50">
                                {{#each ../headers}}
                                <td class="px-6 py-3 text-sm text-gray-900">{{lookup ../this this}}</td>
                                {{/each}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                
                {{#if (gt totalRows 10)}}
                <div class="p-4 bg-gray-50 text-center text-sm text-gray-600 border-t border-gray-200">
                    ... and {{subtract totalRows 10}} more rows
                </div>
                {{/if}}
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-4">
                <button type="submit" 
                        class="flex-1 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                    Import {{totalRows}} Judges
                </button>
                <a href="/admin/judges/import" 
                   class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-lg font-semibold transition">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
