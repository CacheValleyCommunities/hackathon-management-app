<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Add Team</h1>
                    <p class="text-sm text-gray-500 mt-2">Create a team without requiring user accounts</p>
                </div>
                <a href="/admin" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition">
                    ← Back
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Error Messages -->
        {{#if error}}
        <div class="mb-8 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800 font-medium">{{error}}</p>
        </div>
        {{/if}}

        <!-- Success Messages -->
        {{#if success}}
        <div class="mb-8 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ {{success}}</p>
        </div>
        {{/if}}

        <!-- Info Box -->
        <div class="mb-8 bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-blue-800">
                        <strong>Note:</strong> Teams created here can be judged without requiring user accounts or collecting student data. Only basic team information is required.
                    </p>
                </div>
            </div>
        </div>

        <!-- Form Card -->
        <div class="border border-gray-200 rounded-lg p-8">
            <form method="POST" action="/admin/teams/add" class="space-y-6">
                <!-- Team Name -->
                <div>
                    <label for="teamName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Team Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="teamName" 
                           name="teamName" 
                           required 
                           autofocus
                           placeholder="e.g., Team Awesome"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Table and Category -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Table -->
                    <div>
                        <label for="tableName" class="block text-sm font-semibold text-gray-700 mb-2">
                            Table <span class="text-red-500">*</span>
                        </label>
                        <select id="tableName" 
                                name="tableName" 
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                            <option value="">Select Table</option>
                            {{#each tables}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                        <p class="text-xs text-gray-500 mt-2">
                            Or enter a new table name (e.g., A11, B15)
                        </p>
                    </div>

                    <!-- Category -->
                    <div>
                        <label for="categoryId" class="block text-sm font-semibold text-gray-700 mb-2">
                            Category <span class="text-red-500">*</span>
                        </label>
                        <select id="categoryId" 
                                name="categoryId" 
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                            <option value="" disabled selected>Select Category</option>
                            {{#if categories.length}}
                                {{#each categories}}
                                <option value="{{this.id}}">{{this.name}}</option>
                                {{/each}}
                            {{else}}
                                <option value="" disabled>No categories available</option>
                            {{/if}}
                        </select>
                        {{#unless categories.length}}
                        <p class="text-xs text-red-500 mt-2">
                            Categories must be added before creating teams
                        </p>
                        {{/unless}}
                    </div>
                </div>

                <!-- Division -->
                {{#if divisions.length}}
                <div>
                    <label for="division" class="block text-sm font-semibold text-gray-700 mb-2">
                        Division <span class="text-red-500">*</span>
                    </label>
                    <select id="division" 
                            name="division" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                        <option value="" disabled selected>Select Division</option>
                        {{#each divisions}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                {{/if}}

                <!-- Project Name -->
                <div>
                    <label for="projectName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Project Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="projectName" 
                           name="projectName" 
                           required 
                           placeholder="e.g., AI-Powered Solution"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Contact Email (Optional) -->
                <div>
                    <label for="contactEmail" class="block text-sm font-semibold text-gray-700 mb-2">
                        Contact Email <span class="text-gray-500 font-normal">(Optional)</span>
                    </label>
                    <input type="email" 
                           id="contactEmail" 
                           name="contactEmail" 
                           placeholder="team@example.com"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                    <p class="text-xs text-gray-500 mt-2">
                        Optional - not required for judging
                    </p>
                </div>

                <!-- GitHub Link (Optional) -->
                <div>
                    <label for="githubLink" class="block text-sm font-semibold text-gray-700 mb-2">
                        GitHub Link <span class="text-gray-500 font-normal">(Optional)</span>
                    </label>
                    <input type="url" 
                           id="githubLink" 
                           name="githubLink" 
                           placeholder="https://github.com/team/project"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Website Link (Optional) -->
                <div>
                    <label for="websiteLink" class="block text-sm font-semibold text-gray-700 mb-2">
                        Website / Demo Link <span class="text-gray-500 font-normal">(Optional)</span>
                    </label>
                    <input type="url" 
                           id="websiteLink" 
                           name="websiteLink" 
                           placeholder="https://your-project.com"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <!-- Publish to Projects Page -->
                <div class="border-t border-gray-200 pt-6">
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" 
                               id="isPublished" 
                               name="isPublished" 
                               value="1"
                               class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                        <div>
                            <span class="text-sm font-semibold text-gray-700">Publish to Projects Page</span>
                            <p class="text-xs text-gray-500 mt-1">Make this project visible on the public projects page</p>
                        </div>
                    </label>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4">
                    <button type="submit" 
                            class="flex-1 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                        Create Team
                    </button>
                    <a href="/admin" 
                       class="flex-1 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-800 text-center rounded-lg font-semibold transition">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

