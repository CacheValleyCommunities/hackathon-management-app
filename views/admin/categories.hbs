<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Manage Categories</h1>
                    <p class="text-sm text-gray-500 mt-2">Add, remove, and manage project categories</p>
                </div>
                <a href="/admin" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition">
                    ← Back
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Success Messages -->
        {{#if (eq (lookup query 'success') 'added')}}
        <div class="mb-8 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ Category added successfully!</p>
        </div>
        {{/if}}
        {{#if (eq (lookup query 'success') 'deleted')}}
        <div class="mb-8 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ Category deleted successfully!</p>
        </div>
        {{/if}}

        <!-- Error Messages -->
        {{#if (eq (lookup query 'error') 'empty')}}
        <div class="mb-8 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800">Category name cannot be empty.</p>
        </div>
        {{/if}}
        {{#if (eq (lookup query 'error') 'exists')}}
        <div class="mb-8 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800">A category with that name already exists.</p>
        </div>
        {{/if}}
        {{#if (eq (lookup query 'error') 'has_teams')}}
        <div class="mb-8 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800">Cannot delete category with assigned teams. Please reassign or delete the teams first.</p>
        </div>
        {{/if}}
        {{#if (eq (lookup query 'error') 'failed')}}
        <div class="mb-8 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800">Operation failed. Please try again.</p>
        </div>
        {{/if}}

        <!-- Add Category Form -->
        <div class="border border-gray-200 rounded-lg p-6 mb-12">
            <h2 class="text-xl font-bold text-gray-900 mb-6">Add New Category</h2>

            <form method="POST" action="/admin/categories/add" class="space-y-4">
                <div>
                    <label for="categoryName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Category Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="categoryName" name="categoryName" required placeholder="e.g., Web Development, Mobile App, AI/ML"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent">
                    <p class="text-xs text-gray-500 mt-2">
                        Categories help organize teams by project type
                    </p>
                </div>
                <button type="submit"
                    class="w-full px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                    Add Category
                </button>
            </form>
        </div>

        <!-- Categories List -->
        <div>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">All Categories</h2>
                <span class="text-sm text-gray-500">{{categories.length}} total</span>
            </div>
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                {{#if categories.length}}
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Category Name</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Status</th>
                                <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider w-32">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {{#each categories}}
                            <tr class="hover:bg-gray-50 transition">
                                <!-- Category Name -->
                                <td class="px-6 py-4 font-semibold text-gray-900">
                                    {{this.name}}
                                </td>

                                <!-- Status -->
                                <td class="px-6 py-4">
                                    {{#with (lookup ../categoryUsage this.id)}}
                                    <span
                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        ● In Use ({{count}} team(s))
                                    </span>
                                    {{else}}
                                    <span
                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                        ○ Available
                                    </span>
                                    {{/with}}
                                </td>

                                <!-- Actions -->
                                <td class="px-6 py-4 text-right">
                                    {{#unless (lookup ../categoryUsage this.id)}}
                                    <button type="button" onclick="deleteCategory({{this.id}}, '{{this.name}}')"
                                        class="text-red-600 hover:text-red-800 transition font-medium">
                                        Delete
                                    </button>
                                    {{/unless}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="text-center py-12">
                    <p class="text-gray-500">No categories found. Add your first category above.</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
    function deleteCategory(categoryId, categoryName) {
        if (confirm(`Are you sure you want to delete category "${categoryName}"?`)) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/admin/categories/${categoryId}/delete`;
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>

