<div class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10 backdrop-blur-sm bg-white/95">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Admin Dashboard</h1>
                    <p class="text-sm text-gray-500 mt-2">Manage teams, users, and event settings</p>
                </div>
                <a href="/" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Success Messages -->
        {{#if (eq (lookup query 'success') 'team_updated')}}
        <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ Team updated successfully!</p>
        </div>
        {{/if}}
        {{#if (eq (lookup query 'success') 'team_deleted')}}
        <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ Team deleted successfully!</p>
        </div>
        {{/if}}
        {{#if (eq (lookup query 'success') 'judge_updated')}}
        <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">✓ Judge updated successfully!</p>
        </div>
        {{/if}}

        <!-- Round Management -->
        <div class="mb-12 pb-8 border-b border-gray-200">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">Current Round</h2>
                    <div class="flex items-baseline gap-3">
                        <span class="text-6xl font-black text-gray-900">{{eventSettings.current_round}}</span>
                        <span class="text-sm text-gray-500">Active round for judging</span>
                    </div>
                </div>
                <form action="/admin/increment-round" method="POST">
                    <button type="submit"
                        onclick="return confirm('This will:\n1. Lock all scores for Round {{eventSettings.current_round}}\n2. Move to Round {{add eventSettings.current_round 1}}\n\nAre you sure?')"
                        class="px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                        Advance to Round {{add eventSettings.current_round 1}} →
                    </button>
                </form>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Quick Actions</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <a href="/admin/judges/add"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Add User</h3>
                    <p class="text-sm text-gray-600">Add judges, participants, or admins</p>
                </a>

                <a href="/admin/judges/import"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Import Judges</h3>
                    <p class="text-sm text-gray-600">Bulk import from CSV file</p>
                </a>

                <a href="/admin/settings"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Event Settings</h3>
                    <p class="text-sm text-gray-600">Configure event details</p>
                </a>

                <a href="/admin/landing"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Landing Page</h3>
                    <p class="text-sm text-gray-600">Customize the public landing page</p>
                </a>

                <a href="/admin/tables"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Manage Tables</h3>
                    <p class="text-sm text-gray-600">Add or remove table locations</p>
                </a>

                <a href="/admin/volunteers"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Manage Volunteers</h3>
                    <p class="text-sm text-gray-600">Review and approve volunteer applications</p>
                </a>

                <a href="/admin/newsletter"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Send Newsletter</h3>
                    <p class="text-sm text-gray-600">Compose and send newsletters to user groups</p>
                </a>

                <a href="/admin/judging/finalize"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Finalize Judging</h3>
                    <p class="text-sm text-gray-600">Lock judging and select winners</p>
                </a>

                <a href="/scores/select-team"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Enter Scores</h3>
                    <p class="text-sm text-gray-600">Score teams as a judge</p>
                </a>

                <a href="/scores/results"
                    class="block p-6 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Leaderboard</h3>
                    <p class="text-sm text-gray-600">View live scores</p>
                </a>
            </div>
        </div>

        <!-- Teams Section -->
        <div class="mb-12">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Teams</h2>
                <span class="text-sm text-gray-500">{{teams.length}} total</span>
            </div>

            {{#if teams.length}}
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Team Name</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Table</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Project</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Contact</th>
                                <th
                                    class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {{#each teams}}
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="font-semibold text-gray-900">{{this.name}}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{{this.table_name}}</td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900 truncate max-w-xs">{{this.project_name}}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    {{#if this.contact_email}}{{this.contact_email}}{{else}}<span
                                        class="text-gray-400">—</span>{{/if}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="/admin/teams/{{this.id}}/edit"
                                            class="text-gray-700 hover:text-gray-900 transition">Edit</a>
                                        <span class="text-gray-300">•</span>
                                        <form action="/admin/teams/{{this.id}}/delete" method="POST" class="inline">
                                            <button type="submit"
                                                onclick="return confirm('Are you sure you want to delete {{this.name}}?')"
                                                class="text-red-600 hover:text-red-800 transition">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            {{else}}
            <div class="text-center py-12 border border-gray-200 rounded-lg">
                <p class="text-gray-500">No teams registered yet.</p>
            </div>
            {{/if}}
        </div>

        <!-- Users Section -->
        <div class="mb-12">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Users</h2>
                <span class="text-sm text-gray-500">{{users.length}} total</span>
            </div>

            {{#if users.length}}
            <div class="border border-gray-200 rounded-lg overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Email</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Name</th>
                                <th
                                    class="px-6 py-3 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Role</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Team</th>
                                <th
                                    class="px-6 py-3 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Change Role</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {{#each users}}
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{this.email}}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    {{#if this.name}}{{this.name}}{{else}}<span class="text-gray-400">—</span>{{/if}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    {{#if (eq this.role 'admin')}}
                                    <span
                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">Admin</span>
                                    {{else if (eq this.role 'participant')}}
                                    <span
                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">Participant</span>
                                    {{else}}
                                    <span
                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Judge</span>
                                    {{/if}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    {{#if this.team_name}}{{this.team_name}}{{else}}<span
                                        class="text-gray-400">—</span>{{/if}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <form action="/admin/judges/{{encodeURIComponent this.email}}/update" method="POST">
                                        <select name="role" onchange="this.form.submit()"
                                            class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-gray-900 focus:border-transparent cursor-pointer">
                                            <option value="judge" {{#if (eq this.role 'judge' )}}selected{{/if}}>Judge
                                            </option>
                                            <option value="participant" {{#if (eq this.role 'participant'
                                                )}}selected{{/if}}>Participant</option>
                                            <option value="admin" {{#if (eq this.role 'admin' )}}selected{{/if}}>Admin
                                            </option>
                                        </select>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            {{else}}
            <div class="text-center py-12 border border-gray-200 rounded-lg">
                <p class="text-gray-500">No users registered yet.</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>