<div class="min-h-screen bg-white flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full">
        <!-- Logo/Event Name -->
        <div class="text-center mb-12">
            {{#if eventSettings.logo_filename}}
            <img src="/uploads/{{eventSettings.logo_filename}}" alt="{{eventName}}" class="max-h-20 mx-auto mb-6">
            {{/if}}
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight mb-2">Sign In</h1>
            <p class="text-gray-600">Enter your email to receive a secure sign-in link</p>
        </div>

        <!-- Login Card -->
        <div class="border border-gray-200 rounded-lg p-8">
            <form method="POST" action="/auth/login" class="space-y-6">
                {{#if error}}
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <p class="text-red-800 text-sm">{{error}}</p>
                </div>
                {{/if}}

                {{#if success}}
                <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                    <p class="text-green-800 text-sm font-medium">{{success}}</p>
                </div>
                {{/if}}

                <div>
                    <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                        Email Address
                    </label>
                    <input type="email" id="email" name="email" required autofocus placeholder="you@example.com"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition">
                </div>

                <button type="submit"
                    class="w-full px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg font-semibold transition">
                    Send Sign In Link
                </button>
            </form>

            <!-- Footer Info -->
            <div class="mt-6 pt-6 border-t border-gray-200">
                <p class="text-center text-sm text-gray-500">
                    A secure link will be sent to your email
                </p>
            </div>
        </div>

        <!-- Register Link -->
        <div class="mt-8 text-center">
            <p class="text-sm text-gray-600">
                Need to register a team?
                <a href="/register" class="text-gray-900 font-semibold hover:underline">Register here</a>
            </p>
        </div>
    </div>
</div>